{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "name": "Debug Jest Tests",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": [
        "--runInBand" // runs tests serially so breakpoints work
      ],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "env": {
        "NODE_ENV": "test"
      }
    }
  ]
}
