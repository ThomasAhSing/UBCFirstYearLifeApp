{
  "expo": {
    "name": "UBCFirstYearLifeApp",
    "slug": "UBCFirstYearLifeApp",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/ubcfyla_app_icon",
    "scheme": "ubcfirstyearlifeapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/ubcfyla_splashscreen.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#0C2A42"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses photos to let admin upload photos for posts. ADMIN USE ONLY. Permission to access photos will not be asked to user"
        }
      ],
      "expo-font",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
